<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="300" prefWidth="400" spacing="10" style="-fx-padding: 20;" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Login_page.Login">

    <Label style="-fx-font-size: 16px; -fx-font-weight: bold;" text="Login to Kamchemani Restaurant System" />
    <TextField fx:id="usernameField" promptText="Email or Phone Number" />
    <PasswordField fx:id="passwordField" promptText="Password or PIN" />
    <Button onAction="#handleLogin" text="Login" />
    <Hyperlink onAction="#handleSignUp" text="Don't have an account? Sign up" />

</VBox>
